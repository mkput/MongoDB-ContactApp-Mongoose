<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No. HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert fw-bold" role="alert">
                Contact masih kosong.
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= ++i %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn btn-light badge text-bg-light rounded-pill"
                >detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <a href="/contact/add" class="btn btn-dark mt-2">Tambah Data Contact</a>
    </div>
  </div>
</div>
